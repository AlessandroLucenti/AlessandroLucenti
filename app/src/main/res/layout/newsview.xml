<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notizia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notizia"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/immagineNotizia"/>

    <ImageView
        android:id="@+id/immagineNotizia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kenkaneki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notizia"
        app:layout_constraintBottom_toTopOf="@+id/editore"/>

    <TextView
        android:id="@+id/editore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editore"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/immagineNotizia" />
</androidx.constraintlayout.widget.ConstraintLayout>