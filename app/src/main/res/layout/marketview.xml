<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Giocatore"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/mulder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/nomeGiocatore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mychal Murder"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Giocatore" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/RuoloGiocatore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SG"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeGiocatore" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/scudetto_prima"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/magic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RuoloGiocatore" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/scudetto_dopo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/heat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RuoloGiocatore" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/NomePrimaSquadra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miami Heat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scudetto_dopo" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/NomeSecondaSquadra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orlando Magic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scudetto_prima" />
</androidx.constraintlayout.widget.ConstraintLayout>